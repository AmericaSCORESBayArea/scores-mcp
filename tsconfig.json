{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@types": ["./src/types/index.ts"],
      "@utils": ["./src/utils/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}